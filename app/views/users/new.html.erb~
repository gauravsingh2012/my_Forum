<body>
<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field3">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field3">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field3">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field3">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions3">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</body>
