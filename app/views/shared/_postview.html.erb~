<div id = "postform">
<%= render :partial => 'posts/form' %>
<h2> Questions </h2>
</div>

<% @posts = Post.order("name").page(params[:page]).per(5) %>

<hr />
<%= paginate @posts %>
<% @posts.each do |post| %>
  <h3><%= link_to post.content,post %></h3>
  <p>
   Posted By:<%= mail_to(post.email,post.name) %>
  </p>
  <p>
  <%= time_ago_in_words post.created_at %> ago
  </p>
  <hr />
<% end %>




